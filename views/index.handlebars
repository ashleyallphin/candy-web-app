<div class="container">
    <div class="jumbotron text-center">
        <div class="row">
            <div class="col-12 text-center" id="top-bar">
                <div class ="container header flex-container">
                    <div container="candy2"><img src="/assets/images/candy-02.svg" alt="candy pieces" style="padding-right: 20px;" width="80%"></div>
                    <div container="title"><h1>CANDY</h1></div>
                    <div container="candy3"><img src="/assets/images/candy-03.svg" alt="candy pieces" style="padding-left: 20px;"width="80%"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="container candies">

        <div class="container available-candies">
            
            <div class="row"><h2>Available Candies</h2></div>

            <div class="col-xs-6 " class="task">

                {{#each candy_data}}
                {{#unless this.devoured}}
                
                <div class="container available-candy">
                    
                    <div class = "container candy_name_text">
                    <p>{{this.id}}. {{this.candy_name}}</p>
                    </div>

                    <div class = "container devour-form">
                    <form method="POST" action="/candy/update?_method=PUT" class="button-size">
                        <input type="hidden" name="candy_id" type="text" value={{this.id}}>

                        <button type="submit" class="btn btn-default devour-button">Devour!</button>
                    </form>

                    </div>
                
                </div>
                
                                <hr>

                
                {{/unless}}
                {{/each}}
            
            </div>
        </div>

        <div class="container devoured-candies">

            <div class="row"><h2>Devoured Candies</h2></div>

            <div class="col-xs-6 text-center" class="task">
                
                {{#each candy_data}}
                {{#if this.devoured}}

                <input class="form-control devoured-candy-box" type="text"
                    placeholder="{{this.id}}. {{this.candy_name}}" readonly>
                
                <hr>
                
                {{/if}}
                {{/each}}
            </div>
        </div>
    
    
    </div>

</div>


<div class="container">
    <div class="jumbotron submit-new-candy">

        <div class="row">
            <div class="col-xs-12 text-center enter_section">
                <div class="row">
                    <h3>Enter a New Candy to Devour!</h3>
                </div>

                <form action="/candy/create" method="POST">
                    <input type="text" name="candy_name" class="form-control" value="" id="enter_text">
                    <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
                </form>
            </div>
        </div>
    </div>
</div>